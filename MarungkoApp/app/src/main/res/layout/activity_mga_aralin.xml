<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MgaAralin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/main_background">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <!-- Back icon -->
                <ImageView
                    android:id="@+id/backIcon"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:src="@drawable/back_icon" />

                <!-- Logo -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/marungko_logo_2" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Foreground content -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="@drawable/shining"
                    app:srcCompat="@drawable/mga_aralin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/magaaralBtn1"
                        android:layout_width="330dp"
                        android:layout_height="380dp"
                        android:background="@drawable/aralin_btn1"
                        android:layout_marginTop="20dp"/>

                    <ImageButton
                        android:id="@+id/magaaralBtn2"
                        android:layout_width="330dp"
                        android:layout_height="380dp"
                        android:background="@drawable/aralin_btn2"
                        android:layout_marginTop="50dp"/>

                    <ImageButton
                        android:id="@+id/magaaralBtn3"
                        android:layout_width="330dp"
                        android:layout_height="380dp"
                        android:background="@drawable/aralin_btn3"
                        android:layout_marginTop="50dp"/>

                    <ImageButton
                        android:id="@+id/magaaralBtn4"
                        android:layout_width="330dp"
                        android:layout_height="380dp"
                        android:background="@drawable/aralin_btn4"
                        android:layout_marginTop="50dp"/>

                    <ImageButton
                        android:id="@+id/magaaralBtn5"
                        android:layout_width="330dp"
                        android:layout_height="380dp"
                        android:background="@drawable/aralin_btn5"
                        android:layout_marginTop="50dp"/>

                    <ImageButton
                        android:id="@+id/magaaralBtn6"
                        android:layout_width="330dp"
                        android:layout_height="380dp"
                        android:background="@drawable/aralin_btn6"
                        android:layout_marginTop="50dp"/>

                    <ImageButton
                        android:id="@+id/magaaralBtn7"
                        android:layout_width="330dp"
                        android:layout_height="380dp"
                        android:background="@drawable/aralin_btn7"
                        android:layout_marginTop="50dp"/>

                    <ImageButton
                        android:id="@+id/magaaralBtn8"
                        android:layout_width="330dp"
                        android:layout_height="380dp"
                        android:background="@drawable/aralin_btn8"
                        android:layout_marginTop="50dp"/>

                    <ImageButton
                        android:id="@+id/magaaralBtn9"
                        android:layout_width="330dp"
                        android:layout_height="380dp"
                        android:background="@drawable/aralin_btn9"
                        android:layout_marginTop="50dp"/>

                    <ImageButton
                        android:id="@+id/magaaralBtn10"
                        android:layout_width="330dp"
                        android:layout_height="380dp"
                        android:background="@drawable/aralin_btn10"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="50dp"/>



                </LinearLayout>

            </LinearLayout>
        </ScrollView>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>