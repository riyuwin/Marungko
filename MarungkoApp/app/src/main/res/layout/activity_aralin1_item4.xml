<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aralin1.Aralin1_Item4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/main_background_4">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <!-- Back icon -->
                <ImageView
                    android:id="@+id/backIcon"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:src="@drawable/back_icon" />

                <!-- Logo -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/marungko_logo_2" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Foreground content -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="left" >

                <LinearLayout
                    android:id="@+id/buttonLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageButton
                        android:id="@+id/bumalikBtn"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:layout_gravity="start"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="4/4"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:fontFamily="@font/mochiypopone_regular"
                        android:layout_gravity="start"/>

                    <ImageButton
                        android:id="@+id/magpatuloyBtn"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:layout_gravity="end"/>
                </LinearLayout>

                <!--<ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="20dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/gawain_1" />-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/mochiypopone_regular"
                    android:text="Pagsusulit"
                    android:gravity="center"
                    android:textColor="#FFFFFF"/>


                <LinearLayout
                    android:id="@+id/pagsusulitItem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/kanit_light"
                        android:text="Pindutin ang tamang sagot"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="10dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_gravity="start"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/alin_sa_larawan" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <ImageButton
                            android:id="@+id/atisBtn"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:src="@drawable/atis_quiz"
                            android:layout_marginTop="20dp"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:layout_gravity="start"/>


                        <ImageButton
                            android:id="@+id/manikaBtn"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:src="@drawable/manika_quiz"
                            android:layout_marginTop="20dp"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:layout_gravity="end"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/siliBtn"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:src="@drawable/sili_quiz"
                            android:layout_marginTop="20dp"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:layout_gravity="start"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pagsusulitItem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="40dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/kanit_light"
                        android:text="Pindutin ang tamang sagot"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="10dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_gravity="start"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/aralin1_quiz1" />

                    <ImageButton
                        android:id="@+id/alonAgilaBtn"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/aralin1_quiz_btn1"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_gravity="start"/>

                    <ImageButton
                        android:id="@+id/sobreMapaBtn"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/aralin1_quiz_btn2"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_gravity="start"/>

                    <ImageButton
                        android:id="@+id/sabonAklatBtn"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/aralin1_quiz_btn3"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_gravity="start"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/pagsusulitItem3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="40dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/kanit_light"
                        android:text="Pindutin ang tamang sagot"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="10dp" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/abaniko"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_gravity="start"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/aralin1_quiz3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <ImageButton
                            android:id="@+id/mmBtn"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:src="@drawable/aralin1_quiz3_btn1"
                            android:layout_marginTop="20dp"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:layout_gravity="start"/>


                        <ImageButton
                            android:id="@+id/ssBtn"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:src="@drawable/aralin1_quiz3_btn2"
                            android:layout_marginTop="20dp"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:layout_gravity="end"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/aaBtn"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:src="@drawable/aralin1_quiz3_btn3"
                            android:layout_marginTop="20dp"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:layout_gravity="start"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pagsusulitItem4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="50dp"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/totalScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="100dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/kanit_regular"
                        android:text="1/3"
                        android:gravity="center"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:padding="16dp"
                        android:fontFamily="@font/kanit_regular"
                        android:text="Sa patatapos ng pagsusulit na ito, nakuha mo ang iskor na"
                        android:gravity="center"
                        android:textColor="#FFFFFF"/>

                    <ImageButton
                        android:id="@+id/bumalikMenuBtn"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/bumalik_menu_btn"
                        android:layout_marginTop="20dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_gravity="start" />

                </LinearLayout>


                <ImageButton
                    android:id="@+id/sunodBtn"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/sunod_btn"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_gravity="start"
                    android:visibility="gone"/>



            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>